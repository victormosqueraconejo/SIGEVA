<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MasInformacionCandidatoFragment">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:src="@drawable/candidato_default"
        android:scaleType="centerCrop"
        android:background="@drawable/background_button_radius"
        android:id="@+id/imagenCandidadoFragment"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/imagenCandidadoFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/llContainerFragment"
        >
        <TextView
            android:id="@+id/nombreCandidatosFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Carlos Mendoza"
            android:textSize="28sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/numeroCandidatosFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/button_background_tint"
            android:text="001"
            android:layout_gravity="bottom"
            android:textSize="28sp"
            android:textStyle="bold"
            />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestion Empresarial"
        app:layout_constraintTop_toBottomOf="@id/llContainerFragment"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:textSize="20dp"
        android:id="@+id/programaCandidatoFragment"
        android:textColor="@color/text_color_no_votations_title"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/descripcionCandidatoFragment"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/programaCandidatoFragment"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Fomentar el emprendimiento a través de alianzas estratégicas con el sector productivo, buscando que nuestras ideas se conviertan en oportunidades reales de negocio para los aprendices, fortaleciendo el vínculo entre formación y empleo digno, y construyendo un SENA más conectado con las necesidades del territorio."
        android:textSize="18sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/descripcionCandidatoFragment"
        
        >

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/button_background_tint"
            android:id="@+id/btnCancelarFragment"
            app:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:text="Cancelar"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/button_background_tint"
            app:backgroundTint="@color/button_background_tint"
            android:id="@+id/btnVotarFragment"
            android:text="Votar"
            android:textColor="@color/white"

            />

        
    </LinearLayout>









</androidx.constraintlayout.widget.ConstraintLayout>