<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/background_modal"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/wrong_icon_modal"
        android:layout_gravity="center"
        android:id="@+id/imagenModalGeneral"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contraseña Incorrecta"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/titleModalGeneral"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="27sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="La contraseña que ingresaste no es válida. Por favor, inténtalo de nuevo."
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:id="@+id/descriptionModalGeneral"
        android:layout_marginHorizontal="10dp"
        />


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >

       <Button
           android:layout_width="25dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="Cancelar"
           android:background="@drawable/background_modal"
           app:backgroundTint="@color/red"
           android:layout_marginVertical="10dp"
           android:id="@+id/btnModalCancelar"
           android:textColor="@color/white"
           android:layout_marginHorizontal="15dp"
           />

       <Button
           android:layout_width="25dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:text="Aceptar"
           android:background="@drawable/background_modal"
           android:textColor="@color/white"
           app:backgroundTint="@color/secondary_color"
           android:layout_marginVertical="10dp"
           android:id="@+id/btnModalAceptar"
           android:layout_marginHorizontal="15dp"
           />
   </LinearLayout>





</LinearLayout>